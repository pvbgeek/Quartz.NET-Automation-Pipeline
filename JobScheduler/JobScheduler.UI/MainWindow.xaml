<Window x:Class="JobScheduler.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Job Scheduler UI" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBlock Text="Dataset Overview" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,10,0,10" />
            <TextBlock x:Name="DatasetDimensions" FontSize="16" FontWeight="Bold" Margin="10" />
            <DataGrid x:Name="DataPreviewGrid" AutoGenerateColumns="True" Height="200" Margin="10" />
            <Button Content="Quartz Timely Automation" Width="200" Height="50" HorizontalAlignment="Center" Click="QuartzAutomationButton_Click" />
        </StackPanel>
    </Grid>
</Window>
